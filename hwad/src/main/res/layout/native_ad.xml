<?xml version="1.0" encoding="utf-8"?>
<com.huawei.hms.ads.nativead.NativeView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/native_video_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 广告多媒体视图 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ad_mid_bg"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/native_yellow"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="70dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/ad_i"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/hiad_hm_info" />
                <TextView
                    android:id="@+id/ad_title"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="70dp"
                    android:singleLine = "false"
                    android:textColor="#000000"
                    android:textSize="@dimen/hiad_text_13_sp"/>
            </LinearLayout>
            <FrameLayout
                android:id= "@+id/mid"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <com.huawei.hms.ads.nativead.MediaView
                    android:id="@+id/ad_media"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/media_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/native_animator" />
                    <TextView
                        android:id="@+id/ad_flag"
                        android:layout_width="20dp"
                        android:layout_height="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/native_flag_rounded_corners_shape"
                        android:layout_gravity="right|bottom"
                        android:text="AD"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="8sp"
                        android:textStyle="bold" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/media_bgs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/native_animator"/>
                    <TextView
                        android:id="@+id/ad_flags"
                        android:layout_width="20dp"
                        android:layout_height="14dp"
                        android:layout_marginRight="36dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/native_flag_rounded_corners_shape"
                        android:layout_gravity="right|bottom"
                        android:text="AD"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="8sp"
                        android:textStyle="bold" />
                </FrameLayout>
                <Button
                    android:id="@+id/ad_close"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/hiad_banner_close_btn"
                    android:layout_gravity="right"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/mid"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ad_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <!-- 广告标识 -->
                <TextView
                    android:id="@+id/ad_source"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/ad_icon"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>>
        <RelativeLayout
            android:id="@+id/right_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/ad_mid_bg"
            android:layout_alignParentEnd="true">

            <com.huawei.hms.ads.AppDownloadButton
                xmlns:progress_button="http://schemas.android.com/apk/res-auto"
                android:id="@+id/app_download_btn"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                progress_button:hiad_fixedWidth="true"
                progress_button:hiad_maxWidth="150dp"
                progress_button:hiad_minWidth="80dp"
                progress_button:hiad_textColor="#FFFFFF"
                progress_button:hiad_textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>>
</com.huawei.hms.ads.nativead.NativeView>

